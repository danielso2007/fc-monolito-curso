{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "test",
			"group": "test",
			"problemMatcher": [],
			"label": "npm: test",
			"detail": "Executa os testes do projeto"
		},
		{
			"type": "npm",
			"script": "install",
			"group": "clean",
			"problemMatcher": [],
			"label": "npm: install",
			"detail": "Instalar dependências do projeto"
		},
		{
			"label": "Rodar Testes",
			"type": "shell",
			"command": "npm run test",
			"group": "build",
			"problemMatcher": [
				"$tsc",
				"$eslint-stylish"
			]
		},
		{
			"label": "npm: tsc",
			"type": "shell",
			"command": "npm run tsc",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "npm: release",
			"type": "shell",
			"command": "npm run release",
			"group": "none"
		},
		{
			"label": "npm: lint",
			"type": "shell",
			"command": "npm run lint",
			"group": "none",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "npm: lint:fix",
			"type": "shell",
			"command": "npm run lint:fix",
			"group": "none",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "Git: Enviar alterações com tags",
			"type": "shell",
			"command": "git push --follow-tags origin main",
			"group": "none",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Carregar Dados Database",
			"type": "shell",
			"command": "./carregar-dados.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": []
		}
	]
}